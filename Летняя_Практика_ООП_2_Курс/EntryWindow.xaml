<Window x:Class="Летняя_Практика_ООП_2_Курс.EntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Летняя_Практика_ООП_2_Курс"
        mc:Ignorable="d"
        Title="Вход" Height="210" Width="280" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" FontSize="14">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Логин" FontWeight="Black" Margin="5"/>
            <TextBox x:Name="NameTextBox" Width="200" Height="25" MaxLength="30" Cursor="IBeam" Margin="5"/>
            <TextBlock Text="Пароль" FontWeight="Black" Margin="5" />
            <PasswordBox x:Name="PasswordTextBox" Width="200" Height="25" MaxLength="20" Cursor="IBeam" Margin="5"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Войти" Height="25" Width="80" Cursor="Hand" Click="Button_Click" Margin="5" IsDefault="True"/>
                <Button Content="Регистрация" Height="25" Width="110" Cursor="Hand" Click="Button_Click_1" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="Летняя_Практика_ООП_2_Курс.Регистрация"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Летняя_Практика_ООП_2_Курс"
        mc:Ignorable="d"
        Title="Регистрация" Height="270" Width="250" ResizeMode="CanMinimize" FontSize="14" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Имя пользователя" FontWeight="Black" Margin="5"/>
            <TextBox x:Name="NameTextBox" Width="200" Height="25" MaxLength="30" Cursor="IBeam"/>
            <TextBlock Text="Пароль" FontWeight="Black" Margin="5"/>
            <PasswordBox x:Name="PasswordTextBox" Width="200" Height="25"  
                     MaxLength="20" Cursor="IBeam"/>
            <TextBlock Text="Повторите пароль" FontWeight="Black"  Margin="5"/>
            <PasswordBox x:Name="PasswordTextBoxSecond" Width="200" Height="25"
                     MaxLength="20" Cursor="IBeam"/>
            <Button Content="Зарегистрироваться" Height="25" Cursor="Hand" Click="Button_Click" Margin="5"/>
        </StackPanel>
        
        
    </Grid>
</Window>
